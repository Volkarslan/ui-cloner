{
  "manifest_version": 3,
  "name": "React-Cloner",
  "version": "0.1.0",
  "description": "Extract DOM structure, CSS, and React component names as AI-friendly JSON",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_title": "React-Cloner",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
